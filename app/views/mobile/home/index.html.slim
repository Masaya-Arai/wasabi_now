#catch
  .inner.row
    ul.col.push-middle#catch-container
      - @headlines_list.each do |h|
        a href=abs_url("/article/#{h.article.hash_code}")
          li.col.catch-1.row style='background-image:url(#{h.page_thumbnail.url})'
            .info.col.push-bottom.row
              .info_wrap.push-bottom.push-bottom
                h3 = h.title
                  span.news_meta
                  span class='post-date' = format_unixtime(h.published_at, true)
                  span class='post-comments' = h.feed.site.name

#contents
